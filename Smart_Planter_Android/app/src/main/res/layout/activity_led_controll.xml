<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".controller.LedControllActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/led_button_controller"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/led_button_back"
        android:fontFamily="@font/netmarblem"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_marginBottom="100dp"
        android:text="On" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rgb_back"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:alpha="0.5"
        >
    <LinearLayout
        android:id="@+id/RedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/R_label"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/netmarblem"
            android:textSize="20sp"
            android:text="R" />

        <SeekBar
            android:id="@+id/R_seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:min="0"
            android:max="100"
            android:thumbTint="@color/white"
            android:progress="50"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@android:color/holo_red_dark"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/GreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/G_label"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/netmarblem"
            android:textSize="20sp"
            android:text="G" />

        <SeekBar
            android:id="@+id/G_seekBar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/white"
            android:progressBackgroundTint="@color/white"
            android:progress="50"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BlueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/B_label"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/netmarblem"
            android:textSize="20sp"
            android:text="B" />

        <SeekBar
            android:id="@+id/B_seekBar3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:thumbTint="@color/white"
            android:progressBackgroundTint="@color/white"
            android:progress="50"
            android:progressTint="#526D82"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>